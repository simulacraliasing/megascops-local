{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Megascops-local",
  "version": "0.1.6",
  "identifier": "com.megascops-local.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build && node scripts/download-binaries.js",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Megascops-local",
        "width": 660,
        "height": 488
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/organize"
    ]
  }
}
