{
  "identifier": "com.megascops-local.app",
  "app": {
    "windows": [
      {
        "title": "Megascops-local",
        "width": 640,
        "height": 512
      }
    ]
  },
  "bundle": {
    "resources": {
      "models/toml/*": "models/",
      "lib/*": ""
    },
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installerHooks": "./windows/hooks.nsi"
      }
    },
    "externalBin": [
      "binaries/ffmpeg",
      "binaries/ffprobe",
      "binaries/organize",
      "binaries/checker"
    ]
  }
}
